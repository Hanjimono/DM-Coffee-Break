{
  "name": "dm-coffee-break",
  "version": "0.1.0",
  "private": true,
  "main": "build/main.js",
  "scripts": {
    "next:dev": "next dev",
    "next:build": "next build",
    "next:start": "next start",
    "next:lint": "next lint",
    "format": "dprint fmt",
    "postinstall": "electron-builder install-app-deps",
    "electron:dist": "electron-builder --dir",
    "electron:dist:deb": "electron-builder --linux deb",
    "electron:build": "tsup",
    "build": "run-s next:build electron:build",
    "dist": "run-s next:build electron:dist",
    "dev": "npm-run-all --parallel electron:dev next:dev",
    "electron:build_watch": "tsup --watch",
    "electron:dev": "npm-run-all --parallel electron:build_watch electron:watch-delay",
    "electron:watch": "cross-env NODE_ENV='development' nodemon",
    "electron:watch-delay": "npm-run-all \"delay 1000\" electron:watch",
    "pretty": "npx prettier . --write",
    "prepare-css": "find . -name '*.example.scss' -exec sh -c 'cp \"$0\" \"${0%.example.scss}.scss\"' {} \\;",
    "prepare-husky": "npx husky init",
    "prepare": "husky",
    "delay": "node -e \"setTimeout(function() {}, Number(process.argv[1]))\""
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ]
  },
  "build": {
    "asar": true,
    "executableName": "DM Coffee Break",
    "appId": "com.myasnikov.dm-coffee-break",
    "asarUnpack": [
      "node_modules/next",
      "node_modules/@img",
      "node_modules/sharp",
      "**\\*.{node,dll}"
    ],
    "files": [
      "build",
      {
        "from": ".next/standalone",
        "to": "app",
        "filter": [
          "!**/.env",
          "!**/package.json"
        ]
      },
      {
        "from": ".next/static",
        "to": "app/.next/static"
      },
      {
        "from": "public",
        "to": "app/public"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "deb"
      ],
      "category": "Development"
    }
  },
  "dependencies": {
    "@electron-toolkit/utils": "^3.0.0",
    "@hookform/resolvers": "^3.9.0",
    "@types/js-cookie": "^3.0.6",
    "clsx": "^2.1.1",
    "framer-motion": "^11.11.9",
    "get-port-please": "^3.1.2",
    "immer": "^10.1.1",
    "js-cookie": "^3.0.5",
    "next": "14.2.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.53.0",
    "react-tooltip": "^5.28.0",
    "sequelize": "^6.37.5",
    "soundcloud-downloader": "^1.0.0",
    "sqlite3": "^5.1.7",
    "tsc": "^2.0.4",
    "yup": "^1.4.0",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "cross-env": "^7.0.3",
    "electron": "^33.0.2",
    "electron-builder": "^25.1.8",
    "eslint": "^8",
    "eslint-config-next": "^15.0.0-rc.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "sass": "1.77.2",
    "tsup": "^8.3.5",
    "typescript": "^5"
  }
}
